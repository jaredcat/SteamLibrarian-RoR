<div class="container" style="margin-top:20px;">
  <div class="row">
		<div class="col-xs-3 pull-right">
		  <button type="button" class="random-button btn btn-default pull-right">Random</button>
		</div>
  </div>
  
  <div class="row">
		<div class="col-xs-3" style="min-width: 150px">
			<h3 class="text-left">Filters</h3>
			<div class="well well-sm">
				<div class="checkbox">
					<h4 class="text-left">Genres</h4>
                          <label><input type="checkbox" value="">Action</label>
                        </div>
                        <div class="checkbox">
                          <label><input type="checkbox" value="">Card Game</label>
                        </div>
                        <div class="checkbox">
                          <label><input type="checkbox" value="">Real-Time Strategy</label>
                        </div>
                        <hr />
<h4 class="text-left">Themes</h4>

                        <div class="checkbox">
                          <label><input type="checkbox" >Prehistoric</label>
                        </div>
                        <div class="checkbox">
                          <label><input type="checkbox" >Cyberpunk</label>
                        </div>
                        <div class="checkbox">
                          <label><input type="checkbox" >Sci-fi</label>
                        </div>
<div class="checkbox">
                          <label><input type="checkbox" >Dating</label>
                        </div>
                        <hr />
<h4 class="text-left">Concepts</h4>
                        <div class="checkbox">
                          <label><input type="checkbox" >4X</label>
                        </div>
                        <div class="checkbox">
                          <label><input type="checkbox" >Artillery</label>
                        </div>
                        <div class="checkbox">
                          <label><input type="checkbox" >Barbarians</label>
                        </div>
<div class="checkbox">
                          <label><input type="checkbox" >Cavalry</label>
                        </div>
<div class="checkbox">
                          <label><input type="checkbox" >Government</label>
                        </div>
<div class="checkbox">
                          <label><input type="checkbox" >Minimap</label>
                        </div>
			</div>
		</div>
		
		<div class="col-xs-9">
		  <% gamelist = Game.where(id: UsersGame.where(user_id: @user.id).pluck(:game_id)) %>
			<h3 class="text-left">Games (<%= gamelist.length %>)</h3>
			<div class="well">
				<table id="gametable" class="table table-striped table-bordered" 
					cellspacing="0" width="100%">
					<thead>
						<tr>
							<th>Image</th>
							<th>Name</th>
							<th>Time Played</th>
							<th>Launch Game</th>
						</tr>
					</thead>
	 
					<tbody>
						<% gamelist.each do |game| %>
  							<tr>
  								<td><img src="<%= game.image %>" /> </td>
  								<td><%= game.name %></td>
  								<td><%= UsersGame.find_by(user_id: @user.id, game_id: game.id).playtime_forever %></td>
  								<td><button type="button" class="btn btn-primary btn-lg btn-block"><a href="steam://run/<%= game.appid %>" style="color:white">Run</a></button></td>
  							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
  </div>
  
  <div class="row" style="margin-top:10px;">
		<div class="col-xs-3 pull-right">
		  <button type="button" class="random-button btn btn-default pull-right">Random</button>
		</div>
  </div>
</div>