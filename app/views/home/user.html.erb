<div class="container" style="margin-top:20px;">
  <div class="row">
		<div class="col-xs-3 pull-right">
		  <button type="button" class="random-button btn btn-default pull-right">Random</button>
		</div>
  </div>
  
  <div class="row">
    <div class="col-xs-3" style="min-width: 150px">
      <h3 class="text-left">Filters</h3>
      <div class="well well-sm">
        <h4 class="text-left">Genres</h4>
				<% @genres.each do |genre| %>
  				<div class="checkbox">
  				  <label><input type="checkbox" value="<%= genre %>"><%= genre %></label>
  				</div>
  			<% end %>
				<hr />
				<h4 class="text-left">Themes</h4>
				<% @themes.each do |theme| %>
  				<div class="checkbox">
  				  <label><input type="checkbox" value="<%= theme %>"><%= theme %></label>
  				</div>
  			<% end %>
  			<hr />
				<h4 class="text-left">Concepts</h4>
				<% @concepts.each do |concept| %>
  				<div class="checkbox">
  				  <label><input type="checkbox" value="<%= concept %>"><%= concept %></label>
  				</div>
  			<% end %>
			</div>
		</div>
		
		<div class="col-xs-9">
			<h3 class="text-left">Games (<%= @gamelist.length %>)</h3>
			<div class="well">
				<table id="gametable" class="table table-striped table-bordered" 
					cellspacing="0" width="100%">
					<thead>
						<tr>
							<th>Image</th>
							<th>Name</th>
							<th>Time Played</th>
							<th>Launch Game</th>
						</tr>
					</thead>
	 
					<tbody>
						<% @gamelist.each do |game| %>
  							<tr>
  								<td><img src="<%= game.image %>" /> </td>
  								<td><%= game.name %></td>
  								<td><%= UsersGame.find_by(user_id: @user.id, game_id: game.id).playtime_forever %></td>
  								<td><button type="button" class="btn btn-primary btn-lg btn-block"><a href="steam://run/<%= game.appid %>" style="color:white">Run</a></button></td>
  							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
  </div>
  
  <div class="row" style="margin-top:10px;">
		<div class="col-xs-3 pull-right">
		  <button type="button" class="random-button btn btn-default pull-right">Random</button>
		</div>
  </div>
</div>