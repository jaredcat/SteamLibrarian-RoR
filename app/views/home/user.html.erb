<div class="container" style="margin-top:20px;">
  <div class="row">
  	<%= @user.steamid %>
	<div class="col-xs-3 pull-right">
	  <button type="button" class="random-button btn btn-default pull-right">Random</button>
	</div>
  </div>
  
  <div class="row">
	<div class="col-xs-3" style="min-width: 150px">
		<h3 class="text-left">Filters</h3>
		<div class="well well-sm" style="max-height: 300px;overflow: auto;">
			<div class="checkbox">
			  <label><input type="checkbox" value="">Option 1</label>
			</div>
			<div class="checkbox">
			  <label><input type="checkbox" value="">Option 2</label>
			</div>
			<div class="checkbox disabled">
			  <label><input type="checkbox" value="" disabled>Option 3</label>
			</div>
		</div>
	</div>
	
	<div class="col-xs-9">
		<h3 class="text-left">Games</h3>
		<div class="well" style="max-height: 300px;overflow: auto;">
			<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
				<thead>
					<tr>
						<th>Title</th>
						<th>Rating</th>
						<th>Time Played</th>
						<th>Description</th>
					</tr>
				</thead>
 
				<tbody>
					<tr>
						<td>League of Legends</td>
						<td>10.4</td>
						<td>2650 hours</td>
						<td></td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
  </div>
  
  <div class="row" style="margin-top:10px;">
	<div class="col-xs-3 pull-right">
	  <button type="button" class="random-button btn btn-default pull-right">Random</button>
	</div>
  </div>
</div>