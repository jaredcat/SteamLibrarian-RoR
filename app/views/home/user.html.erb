<div class="container" style="margin-top:20px;">
  <div class="row">
		<div class="col-xs-3 pull-right">
		  <button type="button" class="random-button btn btn-default pull-right">Random</button>
		</div>
  </div>
  
  <div class="row">
		<div class="col-xs-3" style="min-width: 150px">
			<h3 class="text-left">Filters</h3>
			<div class="well well-sm" style="max-height: 300px;overflow: auto;">
				<div class="checkbox">
				  <label><input type="checkbox" value="">Action</label>
				</div>
				<div class="checkbox">
				  <label><input type="checkbox" value="">Adventure</label>
				</div>
				<div class="checkbox disabled">
				  <label><input type="checkbox" value="">Strategy</label>
				</div>
			</div>
		</div>
		
		<div class="col-xs-9">
			<h3 class="text-left">Games</h3>
			<div class="well">
				<table id="gametable" class="table table-striped table-bordered" 
					cellspacing="0" width="100%">
					<thead>
						<tr>
							<th>Image</th>
							<th>Name</th>
							<th>Time Played</th>
							<th>Launch Game</th>
						</tr>
					</thead>
	 
					<tbody>
						<% 
							gamelist = UsersGame.where(user_id: @user.id).pluck(:game_id)
							for index in 0..gamelist.length-1 do
								game = Game.find(gamelist[index]) %>
							<tr>
								<td><img src="<%= game.image %>" /> </td>
								<td><%= game.name %></td>
								<td><%= UsersGame.find_by(user_id: @user.id, game_id: game.id).playtime_forever %></td>
								<td><button class="btn btn-default"><a href="steam://run/<%= game.appid %>">Run</a></button></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
  </div>
  
  <div class="row" style="margin-top:10px;">
		<div class="col-xs-3 pull-right">
		  <button type="button" class="random-button btn btn-default pull-right">
		  	Random</button>
		</div>
  </div>
</div>