<div class="container" style="margin-top:20px;">
  <div class="row">
		<div class="col-xs-3 pull-right">
		  <button type="button" class="random-button btn btn-default pull-right">Random</button>
		</div>
  </div>
  
  <div class="row">
    <div class="col-xs-3" style="min-width: 150px">
      <h3 class="text-left">Filters</h3>
      <div class="well well-sm">
      	<%= form_tag(url_for(controller: "home", action: "user"), method: "post") do %>
      	<%= hidden_field_tag(:steamid, @user.steamid) %>
	        <h4 class="text-left">Genres</h4>
					<% @genres.each do |genre| %>
	  				<div class="checkbox">
	  					<% @checked_genres != nil && @checked_genres.include?(genre.genre) ? checked = true : checked = false	%>
	  				  <label><%= check_box_tag("genres[]", genre.genre, checked) %><%= genre.genre %></label>
	  				</div>
	  			<% end %>
	  			<%= submit_tag("Filter", class: "btn btn-default") %>
					<hr />
					<h4 class="text-left">Themes</h4>
					<% @themes.each do |theme| %>
	  				<div class="checkbox">
	  					<% @checked_themes != nil && @checked_themes.include?(theme.theme) ? checked = true : checked = false	%>
	  				  <label><%= check_box_tag("themes[]", theme.theme, checked) %><%= theme.theme %></label>
	  				</div>
	  			<% end %>
	  			<%= submit_tag("Filter", class: "btn btn-default") %>
	  			<hr />
					<h4 class="text-left">Concepts</h4>
					<% @concepts.each do |concept| %>
	  				<div class="checkbox">
	  					<% @checked_concepts != nil && @checked_concepts.include?(concept.concept) ? checked = true : checked = false	%>
	  				  <label><%= check_box_tag("concepts[]", concept.concept, checked) %><%= concept.concept %></label>
	  				</div>
	  			<% end %>
	  			<%= submit_tag("Filter", class: "btn btn-default") %>
	  		<% end %>
			</div>
		</div>
		
		<div class="col-xs-9">
			<h3 class="text-left">Games (<%= @gamelist.length %>)</h3>
			<div class="well">
				<table id="gametable" class="table table-striped table-bordered" 
					cellspacing="0" width="100%">
					<thead>
						<tr>
							<th>Image</th>
							<th>Name</th>
							<th>Time Played</th>
							<th>Launch Game</th>
						</tr>
					</thead>
	 
					<tbody>
						<% @gamelist.each do |game| %>
  							<tr>
  								<td><img src="<%= game.image %>" /> </td>
  								<td><%= game.name %></td>
  								<td><%= UsersGame.find_by(user_id: @user.id, game_id: game.id).playtime_forever %></td>
  								<td><a href="steam://run/<%= game.appid %>" style="color:white"><button type="button" role="button" class="btn btn-primary btn-lg btn-block">Run</button></a></td>
  							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
  </div>
  
  <div class="row" style="margin-top:10px;">
		<div class="col-xs-3 pull-right">
		  <button type="button" class="random-button btn btn-default pull-right">Random</button>
		</div>
  </div>
</div>